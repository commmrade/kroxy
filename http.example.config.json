{
  "servers": {
    "google": [{ "host": "google.com", "port": 80 }],
    "google-tls": [{ "host": "google.com", "port": 443, "tls_enabled": true }],
    "fuck_it": [{ "host": "odnoklassniki.ru", "port": 80 }],
    "python": [{ "host":  "127.0.0.1", "port":  9999}],
    "httpbin": [{ "host":  "httpbin.org", "port":  80, "tls_enabled": false }]
  },

  "http": {
    "port": 8080,
    "headers": {
      "Host": "$host",
      "X-Real-IP": "$addr"
    },

    "tls_enabled": true,
    "tls_cert_path": "../tls/certificate.crt",
    "tls_key_path": "../tls/private.key",

    "file_log": "/dev/stdout",
    "format_log": "Client address is $client_addr, $bytes_sent bytes have been sent, $processing_time",

    "timeout_ms": 5000,
    "pass_to": "google-tls"
  }
}
