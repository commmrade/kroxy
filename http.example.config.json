{
  "servers": {
    "google": [{ "host": "google.com", "port": 80 }],
    "google-tls": [{ "host": "google.com", "port": 443, "pass_tls_enabled": true }],
    "fuck": [{ "host": "127.0.0.1", "port": 9090 }],
    "fuck-tls": [{ "host": "127.0.0.1", "port": 9090, "pass_tls_enabled": true, "pass_tls_verify": false, "pass_tls_cert_path": "../tls/certificate.crt", "pass_tls_key_path": "../tls/private.key" }],
    "vk": [{ "host":  "vk.com", "port":  443, "pass_tls_enabled":  true, "pass_tls_verify":  true }],
    "httpbin": [{ "host":  "httpbin.org", "port":  443, "pass_tls_enabled": true }]
  },

  "http": {
    "port": 8080,
    "headers": {
      "Host": "$host",
      "X-Real-IP": "$addr"
    },

    "tls_enabled": true,
    "tls_cert_path": "../tls/certificate.crt",
    "tls_key_path": "../tls/private.key",

    "tls_verify_client": false,

    "file_log": "/dev/stdout",
    "format_log": "URI: $request_uri, method $request_method, status: $status, user agent: $http_user_agent, $bytes_sent haha",

    "timeout_ms": 5000,
    "pass_to": "fuck-tls"
  }
}
